@import '_settings'
@import 'jeet'

normalize-css()
base()

body, html
	margin 0
	padding 0
	// padding 50px
	// background-color shack-green
		

img
	margin 50px 30vw 0
	width 40vw
nav.top
	height 63px
	background-color #F9F9F9
	border-bottom 3px solid shack-green
	ul
		margin 0
		padding 0
		text-align center
		li
			// font-size 0.8em
			padding 22px
			display inline-block
	
		a
			reset-link()
			color #333
			
		li:hover a
			color white
		
		li:hover
			background-color shack-green

nav.grid
	margin 5vh 20vw 0
	width 60vw
	ul
		margin 0
		padding 0
		li
			col(1/4, cycle:4)
			border 1px solid #DDD
			border-left 5px solid shack-green
			list-style-type none
			box-sizing border-box
			// font-size 0.8em
			margin-bottom 1em
			
			.fa
				font-size 3em
				padding 0 12px 0 0
				vertical-align middle
			
			a
				display block
				reset-link()
				padding 12px 22px
				color #333
				// vertical-align middle

		li:hover
			border 1px solid shack-green
			border-left 5px solid shack-green
			
			.fa
				color shack-green
			
