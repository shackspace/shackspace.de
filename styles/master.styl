@import '_settings'
@import 'jeet'

*
	margin 0


normalize-css()
base()

body, html
	height 100%
	margin 0
	padding 0
	max-width 100%
	// padding 50px
	// background-color shack-green
	overflow-x hidden

.container
	min-height 100%
	margin-bottom -1*footer-height

.logo
	display block
	margin 0 auto
	
	+above('m')
		padding 5vh 0
		height 40vh
		
	+below('m')
		width 90%
		width 90vw
		padding 0

.log
	+above('m')
		position absolute
		top 0
		height 50vh
		width 100vw
		z-index 99
	+below('m')
		display none
	
#log
	max-width 100%
	margin 0
	position absolute
	opacity 0.4
	top 0
	height 50vh
	width 100vw
	z-index -999
	.slide
		height 50vh
		overflow hidden
		.img
			background-position center
			background-size 40vw
			height 100%
			width 100%
			// border-left 3px solid shack-green

nav.grid
	max-width 100%
	border-top 5px solid shack-green

	+above('xl')
		padding 5vh 20vw 0
		width 60vw
	+below('xl')
		padding 5vh 15vw 0
		width 70vw
	+below('l')
		padding 5% 5% 0
		padding 5vh 5vw 0
		width 90%
		width 90vw
	ul
		margin 0
		padding 0
		li
			+above('l')
				col(1/4, cycle:4)
			border 1px solid #DDD
			border-left 5px solid shack-green
			list-style-type none
			box-sizing border-box
			// font-size 0.8em
			margin-bottom 1em
			
			.fa
				font-size 3em
				padding 0 12px 0 0
				vertical-align middle
			
			a
				display block
				reset-link()
				padding 12px 22px
				color #333
				// vertical-align middle

		li:hover
			border 1px solid shack-green
			border-left 5px solid shack-green
			
			.fa
				color shack-green
				
#door-status
	&.status-open
		.fa::before
			content '\f00c'
			color green
	&.status-closed
		.fa::before
			content '\f00d'
			color red
	&.status-undefined
		.fa::before
			content '\f128'
			color yellow

.container:after
	content ""
	display block

.footer, .container:after
	height footer-height

iframe
	overflow-y hidden
	height 2em
	width 7em
	display inline
	border 0

@import 'footer'
