@import '_variables'

normalize-css()
base()
typography()

$navbar-height = 62px

nav.primary
	height: $navbar-height
	display: flex
	align-items: center
	padding: 0 64px
	position: fixed
	top: 0
	left: 0
	width: 100%
	box-sizing: border-box
	border-bottom: 4px solid $clr-shack
	background-color: $clr-white
	z-index: 100

	&:not(.hidden)
		transition: transform ease .3s

	&.hidden
		transform: translateY(-1*$navbar-height)

	a:hover
		border-bottom: none

	img
		height: $navbar-height - 16px

	.links
		padding: 0 64px
		font-size: 18px
		a
			margin-right: 32px
			font-family: 'Quicksand'
.hero
	background-color: $clr-blue-grey-900
	display: flex
	flex-direction: column
	padding-top: 32px
	align-items: center

	img
		margin: 64px

	nav.links
		align-self: stretch
		display: flex
		flex: 1 0
		justify-content: center
		padding: 32px 0
		background-color: $clr-blue-grey-800
		a
			link($clr-shack)
			font-size: 20px
			font-weight: 500
			font-family: 'Quicksand'
			margin: 0 32px
#activites-slider
	display: flex
	align-items: center
	margin: 0 0 64px 0
	h2
		margin: 0 32px
		color: $clr-primary-text-dark
		font-weight: 300
#activities
	width: 160px
	overflow: hidden
	height: 36px
	position: relative
	border-bottom: 2px solid $clr-shack-dark
	.text
		width: 100%
		height: 36px
		line-height: 36px
		font-size: 24px
		color: $clr-secondary-text-light
		background-color: $clr-blue-grey-900
		color: $clr-primary-text-dark
		overflow: hidden
		text-align: center
		margin: 0 auto
		letter-spacing: .05em

		&::after
			content: ''
			display: inline-block
			width: 2px
			height: 26px
			position: absolute
			top: 4px
			background-color: $clr-orange
			animation: blink-caret .75s step-end infinite
.intro
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	min-height: 400px
	padding: 64px 0 0 0
	&:nth-child(even)
		background-color: $clr-blue-grey-800
		color: $clr-primary-text-dark
$thumbsize = 177px
#log-container-wrapper
	padding-top: 64px
	overflow: hidden
	height: $thumbsize * 2
	max-width: 100%
#log-container
	display: flex
	flex-wrap: wrap
	width: $thumbsize * 20
	.log-image
		display: block
		height: $thumbsize
		width: $thumbsize
		flex: 0 0 $thumbsize
		background-size: cover
		background-position: 50%
.posts
	display: flex
	flex-direction: column
	align-items: center

	article
		max-width: 900px

		img
			max-width: 500px

body > article.post
	margin: $navbar-height auto
	padding: 16px
	max-width: 900px

#status
	position: fixed
	bottom: 0
	width: 100%
	height: 64px
	background-color: $clr-blue-grey-900
	text-align: center
	line-height: @height
	font-size: 24px
	color: $clr-primary-text-dark
	font-weight: 300
	border-top: 4px solid $clr-amber
	&::after
		font-weight: 500
		content: ' unobserved'
		color: $clr-amber

	&.open
		border-top: 4px solid $clr-shack
		&::after
			content: ' open'
			color: $clr-shack
	&.closed
		border-top: 4px solid $clr-red
		&::after
			content: ' closed'
			color: $clr-red

body > .posts
	margin-top: $navbar-height + 24px


.pagination
	display: flex
	justify-content: center
	align-items: baseline
	margin: 16px 0

	> *
		padding: 0 4px

@keyframes blink-caret
	from, to
		background-color: transparent
	50%
		background-color: $clr-orange
