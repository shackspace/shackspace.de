@import '_variables'

normalize-css()
base()
typography()

$navbar-height = 62px

nav.primary
	height: $navbar-height
	display: flex
	align-items: center
	padding: 0 64px
	position: fixed
	top: 0
	left: 0
	width: 100%
	box-sizing: border-box
	border-bottom: 4px solid $clr-shack
	background-color: $clr-white
	z-index: 100
	
	&:not(.hidden)
		transition: transform ease .3s
	
	&.hidden
		transform: translateY(-1*$navbar-height)
		
	.logo
		a:hover
			text-decoration: none
	img
		height: $navbar-height - 16px

	.links
		padding: 0 64px
		font-size: 18px
		a
			margin-right: 32px
			font-family: 'Quicksand'
.hero
	background-color: $clr-blue-grey-900
	display: flex
	flex-direction: column
	padding-top: 32px
	align-items: center
	
	img
		margin: 64px
	
	nav.links
		align-self: stretch
		display: flex
		flex: 1 0
		justify-content: center
		padding: 32px 0
		background-color: $clr-blue-grey-800
		a
			link($clr-shack)
			font-size: 18px
			font-weight: 500
			font-family: 'Quicksand'
			margin: 0 32px
#activites-slider
	display: flex
	align-items: center
	margin: 0 0 64px 0
	h2
		margin: 0 32px
		color: $clr-primary-text-dark
		font-weight: 300
#activities
	width: 160px
	overflow: hidden
	height: 36px
	position: relative
	border-bottom: 2px solid $clr-shack-dark
	div
		width: 160px
		height: 36px
		line-height: 36px
		font-size: 24px
		text-align: center
		color: $clr-secondary-text-light
		transition: transform ease .5s
		position: absolute
		background-color: $clr-blue-grey-900
		color: $clr-primary-text-dark
	.transition-out
		z-index: 2
		transform: translateX(180px)
		
.intro
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	min-height: 400px
	padding: 64px
	&:nth-child(even)
		background-color: $clr-blue-grey-800
		color: $clr-primary-text-dark
		
#log-container
	max-width: 1030px
	display: flex
	flex-wrap: wrap
	.log-image
		height: 240px
		width: @height
		flex: 0 0 @height
		margin: 8px
		background-size: cover
		background-position: 50%
.posts
	display: flex
	flex-direction: column
	align-items: center
	
	article
		max-width: 900px
		
		img
			max-width: 500px

#status
	position: fixed
	bottom: 0
	width: 100%
	height: 64px
	background-color: $clr-blue-grey-900
	text-align: center
	line-height: @height
	font-size: 24px
	color: $clr-primary-text-dark
	font-weight: 300
	border-top: 4px solid $clr-amber
	&::after
		font-weight: 500
		content: ' unobserved'
		color: $clr-amber
		
	&.open
		border-top: 4px solid $clr-shack
		&::after
			content: ' open'
			color: $clr-shack
	&.closed
		border-top: 4px solid $clr-red
		&::after
			content: ' closed'
			color: $clr-red
